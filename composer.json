{
  "name": "nfreear/composer-suggest",
  "description": "Composer script to install suggestions simply, based on keyword patterns. $ composer install-suggest ABC $ \n(Developed via LACE project)",
  "keywords": [ "Composer", "suggest", "pattern", "regex", "LACE", "OpenUniversity", "IET-OU" ],
  "type": "composer-plugin",
  "license": "MIT",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Nick Freear (@nfreear)"
    }
  ],
  "autoload": {
    "psr-4": {
      "Nfreear\\Composer\\": "src/"
    }
  },
  "extra": {
    "class": "Nfreear\\Composer\\Suggest"
  },
  "support": {
    "source": "http://github.com/nfreear/composer-suggest"
  },
  "require": {
    "php": ">=5.3.2",
    "composer-plugin-api": "1.0.0"
  },
  "require-dev": {
    "composer/composer": "1.0.*@dev",
    "phpunit/phpunit": "~4.0",
    "squizlabs/php_codesniffer": "~2.1.0",
    "jakub-onderka/php-parallel-lint": "~0.8"
  },

  "suggest": {
    "a/b": "1.0; This package is for [LACE] only",
    "c/d": "2.*. This package is for JuxtaLearn and LACE.",
    "e/f": "3.*, This is just for JXL.",
    "g/h": "master; Experiment-A"
  },

  "scripts": {
    "install-suggest": "Nfreear\\Composer\\Suggest::install",
    "dry-run-suggest": "Nfreear\\Composer\\Suggest::dry_run",
    "install-lace": "php -f vendor/nfreear/composer-suggest/src/Suggest.php -- LACE",
    "ABC": "Nfreear\\Composer\\Suggest::dry_run",

    "demo": "php -f src/Suggest.php -- ABC",

    "test": [
      "#../composer.phar validate --no-interaction",
      "#parallel-lint src",
      "phpcs --encoding=utf-8 --standard=PSR2 --report-checkstyle=reports/checkstyle-phpcs.xml --report-full --extensions=php src/*"
    ]
  }
}
