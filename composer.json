{
  "name": "nfreear/composer-suggest",
  "description": "Composer script. Can we find a simple way of installing Composer suggestions?",
  "keywords": [ "LACE", "LearningAnalytics", "OpenUniversity", "IET-OU" ],
  "type": "project",
  "time": "2015-04-29",
  "license": "proprietary",
  "minimum-stability": "dev",
  "authors": [
    { "name": "Nick Freear (@nfreear)" }
  ],
  "autoload": {
    "psr-4": {
      "Nfreear\\Composer\\": "src/"
    }
  },
  "extra": {
    "class": "Nfreear\\Composer\\Composer_Suggest"
  },
  "support": {
    "source": "http://github.com/nfreear/composer-suggest"
  },
  "require": {
    "php": ">=5.3.2",
    "composer-plugin-api": "1.0.0"
  },
  "require-dev": {
    "composer/composer": "1.0.*@dev",
    "phpunit/phpunit": "~4.0",
    "jakub-onderka/php-parallel-lint": "~0.8",
    "squizlabs/php_codesniffer": "~2.1.0",
    "phpspec/prophecy-phpunit": "~1.0"
  },

  "suggest": {
    "a/b": "1.0; This package is [LACE] only",
    "c/d": "2.*. This package is for JuxtaLearn and LACE.",
    "e/f": "3.*, This is just for JXL."
  },

  "scripts": {
    "X-install-suggest": "nfreear\\Composer\\Composer_Suggest::install",
    "install-lace": "php -f vendor/nfreear/composer-suggest/src/Composer_Suggest.php -- LACE",

    "demo": "php -f src/Composer_Suggest.php",

    "test": [
      "../composer.phar validate --no-interaction",
      "parallel-lint src",
      "# phpcs --encoding=utf-8 --standard=PSR2 --report-checkstyle=reports/checkstyle-phpcs.xml --report-full --extensions=php src/*"
    ]
  }
}
